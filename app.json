			"images": {
				"large": "drivers/active_heating/assets/images/large.jpg",
				"small": "drivers/active_heating/assets/images/small.jpg"
			},
			"class": "thermostat",
			"capabilities": [
				"target_temperature",
				"measure_temperature",
				"alarm_battery",
				"hot_water",
				"custom_thermostat_mode"
			],
			"capabilitiesOptions": {
				"target_temperature": {
					"min": 5,
					"max": 32,
					"step": 0.5
